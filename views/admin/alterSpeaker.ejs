

<body>

    <% include partials/header %>




        <div id="page-wrapper">





            <section id="header-main" class="row">
                    <div class="col-md-12">
    
    
                        <!-- DONUT CHART -->
                        <div class="box box-sucess" style="height: auto; padding-bottom:10px">
                            <div class="box-header">
                                <h1 class="page-header" style="padding-bottom: 0px; margin: auto">Alterar Informação de
                                    <i>
                                            <%= speaker.nome_speaker %>
                                     </i>
                                </h1>
                            </div>
                        </div>
    
    
    
                  
    
                </section>
    
    
    
            <section class="content container-fluid">


                <div id="divContent" class="row">




                    <!-- edit form column -->
					
					<div class="col-md-9 personal-info" id="vol-div">
						<h3 style="display:inline-block; padding-right: 450px">Informação Pessoal</h3>
						<form id="alter-speaker" class="form-horizontal" role="form">
				
                            <div id="div-register-msg">
                            <div id="icon-register-msg" class="glyphicon glyphicon-chevron-right"></div>
                                <span id="text-register-msg">Altere as credenciais</span>
                            </div>
						
						
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Nome Completo:</label>
                                <div class="col-lg-8">
                                    <input id="speakalt_name" class="form-control" type="text" name="name" value="<%= speaker.nome_speaker%>" pattern="[a-zA-ZÀ-ž\s]+" title="Apenas letras" required>
                                </div>
                            </div>
                        

                            <div class="form-group">
                                <label class="col-md-3 control-label">Número Telemóvel:</label>
                                <div class="col-md-8">
                                    <input id="speakalt_num" class="form-control" type="number" min="0" name="numero" value="<%= speaker.numero_speaker %>" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Cache</label>
                                <div class="col-md-8">
                                    <input class="form-control" type="number" min="0" name="cache" value="<%= speaker.cache_speaker %>" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label">Morada:</label>
                                <div class="col-md-8">
                                    <input class="form-control" type="text" name="morada" value="<%= speaker.morada_speaker %>" required>
                                    <input class="form-control" type="hidden" name="id_speaker" value="<%= speaker.id_speaker%> " style="display:hidden">

                                </div>
                            </div>


                       
                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-8">
                                    <input type="submit" class="btn btn-primary" value="Guardar">
                                    <span></span>
                                    <input type="button" class="btn btn-default" value="reset" onclick="javascript:location.reload();" >
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </section>

        </div>























        </div>
        <!-- /#page-wrapper -->

















































        <% include partials/footer %>