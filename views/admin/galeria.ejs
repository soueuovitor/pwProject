<% include partials/header %>








    <div id="page-wrapper">






        <div id="floating-button" data-toggle="modal" data-target="#galeria-modal" data-original-title="Create">
            <p class="plus">+</p>
            <img class="edit" src="https://ssl.gstatic.com/bt/C3341AA7A1A076756462EE2E5CD71C11/1x/bt_compose2_1x.png">
        </div>





        <section id="header-main" class="row">
            <div class="col-md-12">


                <!-- DONUT CHART -->
                <div class="box box-sucess" style="height: auto; padding-bottom:10px">
                    <div class="box-header">
                        <h1 class="page-header" style="padding-bottom: 0px; margin: auto">Galeria
                            <small>Fotos Do Seu Workshop</small>

                        </h1>
                    </div>
                </div>


            </div>


        </section>









        <div id="colabCardView" class="row">
            <% for (var e of imagens) { %>
                <div class="col-md-6" style="padding-bottom: 5px;">


                    <!-- DONUT CHART -->
                    <div class="box box-danger">
                        <div class="box-header">
                            <h3 class="box-title">
                                <%=  e.nome_foto %>
                            </h3>


                            <div class="box-tools pull-right">
                                <a class="btn btn-box-tool" onclick="deletePhoto('/galeria/<%= e.caminho %>/delete')">
                                    <i class="fa fa-times fa-lg" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>

                        <img src="/public/img/galeria/<%= e.caminho %>.png" alt="Fjords" width="100%" height="86%">

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <% } %>











        </div>

    </div>
    <script>



        function deletePhoto(col) {
            if (confirm('Quer mesmo apagar esta Foto?')) {
                window.location = col;
            }
        }



        
    </script>







